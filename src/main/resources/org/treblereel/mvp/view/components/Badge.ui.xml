<ui:UiBinder xmlns:ui="urn:ui:org.gwtproject.uibinder"
             xmlns:g="urn:import:org.gwtproject.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
             xmlns:d="urn:import:org.treblereel.ui">

  <ui:style>
    .labels span {
    margin-right: 5px;
    }
  </ui:style>

  <b:Row>
    <b:Column size="XS_12">

      <b:PageHeader text="Badges"/>

      <b:Panel>
        <b:PanelHeader>
          <b:Heading size="H3" text="Basic"/>
        </b:PanelHeader>
        <b:PanelBody>
          <g:FlowPanel addStyleNames="{style.labels}">
            <g:HTMLPanel>
              <a href="#">Deleted Items
                <b:Badge text="42"/>
              </a>
            </g:HTMLPanel>
          </g:FlowPanel>
        </b:PanelBody>
        <b:PanelFooter>
          <d:PrettyPre addStyleNames="lang-xml">
            &lt;a href="#"&gt;Deleted Items\n
            \s\s&lt;b:Badge text="..."/&gt;\n
            &lt;/a&gt;
          </d:PrettyPre>
        </b:PanelFooter>
      </b:Panel>

      <b:Panel>
        <b:PanelHeader>
          <b:Heading size="H3" text="Advanced"/>
        </b:PanelHeader>
        <b:PanelBody>
          <g:FlowPanel addStyleNames="{style.labels}">
            <g:HTMLPanel>
              <a href="#">Inbox
                <b:Badge>
                  <b.html:Text text="12"/>
                  <b:Icon type="ENVELOPE"/>
                  <b.html:Italic>unread</b.html:Italic>
                </b:Badge>
              </a>
            </g:HTMLPanel>
          </g:FlowPanel>
        </b:PanelBody>
        <b:PanelFooter>
          <d:PrettyPre addStyleNames="lang-xml">
            &lt;a href="#"&gt;Inbox\n
            \s\s&lt;b:Badge&gt;\n
            \s\s\s&lt;b.html:Text text="..."/&gt;\n
            \s\s\s&lt;b:Icon type="ENVELOPE"/&gt;\n
            \s\s\s&lt;b.html:Italic&gt;unread&lt;/b.html:Italic&gt;\n
            \s\s&lt;/b:Badge&gt;\n
            &lt;/a&gt;
          </d:PrettyPre>
        </b:PanelFooter>
      </b:Panel>
    </b:Column>

  </b:Row>

</ui:UiBinder>
