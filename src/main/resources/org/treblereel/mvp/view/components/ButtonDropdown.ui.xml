<ui:UiBinder xmlns:ui="urn:ui:org.gwtproject.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:d="urn:import:org.treblereel.ui">

    <ui:style>
        .spacing {
            margin-right: 5px;
        }
    </ui:style>
    <b:Row>
        <b:Column size="XS_12">

            <b:PageHeader text="Button Dropdowns"/>

            <b:Panel>
                <b:PanelHeader>
                    <b:Heading size="H3" text="Basic"/>
                </b:PanelHeader>
                <b:PanelBody>
                    <b:ButtonGroup addStyleNames="{style.spacing}">
                        <b:Button dataToggle="DROPDOWN" toggleCaret="false">Default (no caret)</b:Button>
                        <b:DropDownMenu>
                            <b:AnchorListItem>Item 1</b:AnchorListItem>
                            <b:AnchorListItem>Item 2</b:AnchorListItem>
                        </b:DropDownMenu>
                    </b:ButtonGroup>
                    <b:ButtonGroup addStyleNames="{style.spacing}">
                        <b:Button dataToggle="DROPDOWN" type="PRIMARY">Primary</b:Button>
                        <b:DropDownMenu>
                            <b:AnchorListItem>Item 1</b:AnchorListItem>
                            <b:AnchorListItem>Item 2</b:AnchorListItem>
                        </b:DropDownMenu>
                    </b:ButtonGroup>
                    <b:ButtonGroup addStyleNames="{style.spacing}">
                        <b:Button dataToggle="DROPDOWN" type="SUCCESS">Success</b:Button>
                        <b:DropDownMenu>
                            <b:AnchorListItem>Item 1</b:AnchorListItem>
                            <b:AnchorListItem>Item 2</b:AnchorListItem>
                        </b:DropDownMenu>
                    </b:ButtonGroup>
                    <b:ButtonGroup addStyleNames="{style.spacing}">
                        <b:Button dataToggle="DROPDOWN" type="INFO">Info</b:Button>
                        <b:DropDownMenu>
                            <b:AnchorListItem>Item 1</b:AnchorListItem>
                            <b:AnchorListItem>Item 2</b:AnchorListItem>
                        </b:DropDownMenu>
                    </b:ButtonGroup>
                    <b:ButtonGroup addStyleNames="{style.spacing}">
                        <b:Button dataToggle="DROPDOWN" type="WARNING">Warning</b:Button>
                        <b:DropDownMenu>
                            <b:AnchorListItem>Item 1</b:AnchorListItem>
                            <b:AnchorListItem>Item 2</b:AnchorListItem>
                        </b:DropDownMenu>
                    </b:ButtonGroup>
                    <b:ButtonGroup addStyleNames="{style.spacing}">
                        <b:Button dataToggle="DROPDOWN" type="DANGER">Danger</b:Button>
                        <b:DropDownMenu>
                            <b:AnchorListItem>Item 1</b:AnchorListItem>
                            <b:AnchorListItem>Item 2</b:AnchorListItem>
                        </b:DropDownMenu>
                    </b:ButtonGroup>
                </b:PanelBody>
                <b:PanelFooter>
                    <d:PrettyPre addStyleNames="lang-xml">
                        &lt;b:ButtonGroup&gt;\n
                        \s\s&lt;b:Button dataToggle="DROPDOWN" text="..." type="..." toggleCaret="true|false"/&gt;\n
                        \s\s&lt;b:DropDownMenu&gt;\n
                        \s\s\s\s&lt;b:AnchorListItem&gt;Item 1&lt;/b:AnchorListItem&gt;\n
                        \s\s\s\s&lt;b:AnchorListItem&gt;Item 2&lt;/b:AnchorListItem&gt;\n
                        \s\s&lt;/b:DropDownMenu&gt;\n
                        &lt;/b:ButtonGroup&gt;
                    </d:PrettyPre>
                </b:PanelFooter>
            </b:Panel>

            <b:Panel>
                <b:PanelHeader>
                    <b:Heading size="H3" text="Split"/>
                </b:PanelHeader>
                <b:PanelBody>
                    <b:ButtonGroup addStyleNames="{style.spacing}">
                        <b:Button>Split Dropdown</b:Button>
                        <b:Button dataToggle="DROPDOWN"/>
                        <b:DropDownMenu>
                            <b:AnchorListItem>Item 1</b:AnchorListItem>
                            <b:AnchorListItem>Item 2</b:AnchorListItem>
                            <b:AnchorListItem>Item 3</b:AnchorListItem>
                        </b:DropDownMenu>
                    </b:ButtonGroup>
                </b:PanelBody>
                <b:PanelFooter>
                    <d:PrettyPre addStyleNames="lang-xml">
                        &lt;b:ButtonGroup&gt;\n
                        \s\s&lt;b:Button&gt;Split Dropdown&lt;/b:Button&gt;\n
                        \s\s&lt;b:Button dataToggle="DROPDOWN"/&gt;\n
                        \s\s&lt;b:DropDownMenu&gt;\n
                        \s\s\s\s&lt;b:AnchorListItem&gt;Item 1&lt;/b:AnchorListItem&gt;\n
                        \s\s\s\s&lt;b:AnchorListItem&gt;Item 2&lt;/b:AnchorListItem&gt;\n
                        \s\s\s\s&lt;b:AnchorListItem&gt;Item 3&lt;/b:AnchorListItem&gt;\n
                        \s\s&lt;/b:DropDownMenu&gt;\n
                        &lt;/b:ButtonGroup&gt;
                    </d:PrettyPre>
                </b:PanelFooter>
            </b:Panel>

            <b:Panel>
                <b:PanelHeader>
                    <b:Heading size="H3" text="Dropup"/>
                </b:PanelHeader>
                <b:PanelBody>
                    <b:ButtonGroup dropUp="true" addStyleNames="{style.spacing}">
                        <b:Button dataToggle="DROPDOWN">Dropup</b:Button>
                        <b:DropDownMenu>
                            <b:AnchorListItem>Item 1</b:AnchorListItem>
                            <b:AnchorListItem>Item 2</b:AnchorListItem>
                            <b:AnchorListItem>Item 3</b:AnchorListItem>
                        </b:DropDownMenu>
                    </b:ButtonGroup>
                </b:PanelBody>
                <b:PanelFooter>
                    <d:PrettyPre addStyleNames="lang-xml">
                        &lt;b:ButtonGroup dropUp="true"&gt;\n
                        \s\s&lt;b:Button dataToggle="DROPDOWN"&gt;Dropup&lt;/b:Button&gt;\n
                        \s\s&lt;b:DropDownMenu&gt;\n
                        \s\s\s\s&lt;b:AnchorListItem&gt;Item 1&lt;/b:AnchorListItem&gt;\n
                        \s\s\s\s&lt;b:AnchorListItem&gt;Item 2&lt;/b:AnchorListItem&gt;\n
                        \s\s\s\s&lt;b:AnchorListItem&gt;Item 3&lt;/b:AnchorListItem&gt;\n
                        \s\s&lt;/b:DropDownMenu&gt;\n
                        &lt;/b:ButtonGroup&gt;
                    </d:PrettyPre>
                </b:PanelFooter>
            </b:Panel>
        </b:Column>

    </b:Row>

</ui:UiBinder>
