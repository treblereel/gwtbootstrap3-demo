<ui:UiBinder xmlns:ui="urn:ui:org.gwtproject.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
             xmlns:d="urn:import:org.treblereel.ui">

  <b:Row>
    <b:Column size="XS_12">

      <b:PageHeader text="Code" subText="have code highlighting for users"/>

      <b:Panel>
        <b:PanelHeader>
          <b:Heading size="H3" text="Inline"/>
        </b:PanelHeader>
        <b:PanelBody>
          <b.html:Strong text="Code for section: "/>
          <b:Code>
            &lt;section&gt;
          </b:Code>
        </b:PanelBody>
        <b:PanelFooter>
          <d:PrettyPre addStyleNames="lang-xml">
            &lt;b:Code&gt;\n
            \s\s...\n
            &lt;/b:Code&gt;\n
          </d:PrettyPre>
        </b:PanelFooter>
      </b:Panel>

      <b:Panel>
        <b:PanelHeader>
          <b:Heading size="H3" text="Block"/>
        </b:PanelHeader>
        <b:PanelBody>
          <b:Pre>
            &lt;b.html:Paragraph emphasis="MUTED"/&gt;\n
          </b:Pre>
        </b:PanelBody>
        <b:PanelFooter>
          <d:PrettyPre addStyleNames="lang-xml">
            &lt;b:Pre&gt;\n
            \s\s...\n
            &lt;/b:Pre&gt;\n
          </d:PrettyPre>
        </b:PanelFooter>
      </b:Panel>

    </b:Column>
  </b:Row>

</ui:UiBinder>